{
    "compilerOptions": {
        "target": "es2015",
        "module": "CommonJS",
        "declaration": true,
        "outDir": "./lib",
        "lib": [
            "es2015"
        ],
        "rootDir": "./src",
        "baseUrl": "./src",
        "paths": {
            "~interfaces/*": [
                "interfaces/*"
            ]
        },
        "strict": true,
        "strictPropertyInitialization": false,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true
    }
}
