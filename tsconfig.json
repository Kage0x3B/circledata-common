{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "declaration": true,
        "outDir": "./lib",
        "lib": [
            "ESNext"
        ],
        "rootDir": "./src",
        "baseUrl": "./src",
        "paths": {
            "~interfaces/*": [
                "interfaces/*"
            ]
        },
        "strict": true,
        "strictPropertyInitialization": false,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true
    }
}
